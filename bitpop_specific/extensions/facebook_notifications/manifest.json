{
   "background": {
      "scripts": [
         "js/options.js",
         "js/desktop_notifications.js",
         "js/main.js"
      ]
   },
   "browser_action": {
      "default_icon": "images/icon19.png",
      "default_popup": "popup.html",
      "default_title": "Facebook Notifications"
   },
   "description": "Keep up with your friends, even when you're not on Facebook.",
   "icons": {
      "128": "images/icon128.png",
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
   },
   "name": "Facebook Notifications",
   "options_page": "options.html",
   "permissions": [ "notifications", "chrome://favicon/" ],
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
   "version": "2.9",
   "update_url": "http://tools.bitpop.com/ext/updates.xml",
   "manifest_version": 2
}
